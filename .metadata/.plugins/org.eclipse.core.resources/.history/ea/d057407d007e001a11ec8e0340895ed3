package com.mes.api.common;

import io.restassured.RestAssured;
import io.restassured.http.Method;
import io.restassured.response.Response;
import io.restassured.specification.RequestSpecification;

public class RestAssuredUtility {
	
	public static void setBaseUri(String baseUri) {
		RestAssured.baseURI = baseUri;
	}
	
	public static void resetBaseUri(String baseUri) {
		RestAssured.baseURI = null;
	}
	
	public Response getResponse(String baseUri, String pathParameter) {
		RestAssured.baseURI = baseUri;
		RestAssured.basePath = pathParameter;
		
		String endPoint = RestAssured.baseURI+RestAssured.basePath;
		
		RequestSpecification requestSpecification = RestAssured.given();
		
		return requestSpecification.request(Method.GET, endPoint);

		return null;
		
	}

}
